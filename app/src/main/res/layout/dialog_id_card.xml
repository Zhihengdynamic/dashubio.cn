<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/size_15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fafafa"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="@string/user_info"
                    android:textColor="@android:color/background_dark"
                    android:textSize="20sp" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/full_name"
                            android:drawableRight="@drawable/ic_star"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/nulllinearLayout"
                            android:layout_width="0px"
                            android:layout_height="0px"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal" />

                        <EditText
                            android:id="@+id/name_et"
                            style="@style/addContent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:lines="1" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout android:id="@+id/lay_xingbie"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/gender" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/gender_et"
                            style="@style/addContent"
                            android:hint="@string/gender" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout android:id="@+id/lay_mingzu"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/folk" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/folk_et"
                            style="@style/addContent"
                            android:editable="false"
                            android:hint="@string/folk" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout android:id="@+id/lay_chusheng"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/birth" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/birth_et"
                            style="@style/addContent"
                            android:editable="false"
                            android:hint="@string/birth" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout android:id="@+id/lay_diqu"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="地区" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <Spinner
                            android:id="@+id/spin_province"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"/>

                        <Spinner
                            android:id="@+id/spin_city"
                            android:layout_width="120dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content" />

                        <Spinner
                            android:id="@+id/spin_county"
                            android:layout_width="120dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout android:id="@+id/lay_dizhi"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/address" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/address_et"
                            style="@style/addContent"
                            android:hint="@string/address" />
                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="3">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/id_number"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView6"
                            android:drawableRight="@drawable/ic_star"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/id_number_et"
                            style="@style/addContent"
                            android:hint="@string/id_number" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/phone_number"
                            android:drawableRight="@drawable/ic_star"/>

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/phone_number_et"
                            style="@style/addContent"
                            android:hint="@string/phone_number" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />





                <LinearLayout android:id="@+id/lay_mphone"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/id_card_item_height"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="3">

                        <TextView
                            style="@style/addTitle"
                            android:text="@string/Frequent_contacts" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="fill_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/divider"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/id_card_item_height"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/edt_contacts_number"
                            style="@style/addContent"
                            android:hint="@string/phone_number" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/size_15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/size_15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/ucenter_button"
                    android:focusable="true"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/ucenter_button_cancel"
                    android:focusable="true"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>