<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_item_index_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张三"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/tv_item_index_age"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="22"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/tv_item_index_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="血压"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/tv_item_index_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!--
            <TextView
                android:id="@+id/view_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_selector"
                android:padding="8dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/view"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text" />
-->

            <TextView
                android:id="@+id/view_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/view"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/result_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="gone">

        <TextView
            android:id="@+id/result_status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/warning_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>

</LinearLayout>
