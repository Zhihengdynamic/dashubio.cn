<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <TextView  
            android:id="@+id/tv_item_chat_time"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_gravity="center_horizontal"  
            android:paddingTop="2dp"  
            android:paddingBottom="2dp"  
            android:paddingLeft="4dp"  
            android:paddingRight="4dp"  
            android:textColor="@color/gray"  
            android:textSize="@dimen/normal_text" />  
      
    <RelativeLayout  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:layout_marginTop="5dp" >  
  
        <ImageView  
            android:id="@+id/img_item_chat"  
            android:layout_width="50dp"  
            android:layout_height="50dp"  
            android:layout_alignParentLeft="true"  
            android:layout_alignParentTop="true"  
            android:background="@drawable/img_touxiang"  
            android:focusable="false" />  
  
        <TextView  
            android:id="@+id/tv_item_chat_content"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:layout_marginLeft="5dp"  
            android:layout_toRightOf="@+id/img_item_chat"  
            android:background="@drawable/chat_left_qp"  
            android:gravity="left|center"  
            android:focusable="true"  
            android:lineSpacingExtra="2dp"  
            android:minHeight="50dp"  
            android:textColor="@color/black"  
            android:textSize="@dimen/normal_text" />  
          
    </RelativeLayout>

</LinearLayout>
