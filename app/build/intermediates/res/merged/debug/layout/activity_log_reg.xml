<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_40dp"
        android:paddingTop="@dimen/size_20dp"
        android:paddingBottom="@dimen/size_20dp"
        android:background="@color/blue_light"
        android:text="@string/dashubio_health_management_system"
        android:textColor="@android:color/white"
        android:textSize="45sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_break"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_text"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="- - - - - - - - - - -" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_break"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_text_2"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="登录" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:textColor="@color/white"
        android:textSize="@dimen/main_title_text_2"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="注册" />

   
</RelativeLayout>
