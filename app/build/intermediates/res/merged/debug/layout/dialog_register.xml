<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="1dp"
    android:background="#38000000" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:background="@color/transparent" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="350dp"
                    android:layout_height="500dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:padding="30dp"
                    android:gravity="center"
                    android:orientation="vertical" >


                    <TextView
                        android:id="@+id/tv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="大树·英杰"
                        android:textColor="#029DAF"
                        android:textSize="@dimen/main_title_text"
                        android:drawableLeft="@drawable/ic_launcher"
                        android:drawablePadding="10dp"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_imei"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="@string/please_enter_the_serial_number_of_equipment"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="请输入手机号码"
                            android:inputType="phone"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text" />

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:layout_marginTop="10dp"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="@string/maximum_of_pwd_num"
                            android:minEms="6"
                            android:maxLength="30"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text" />

                        <EditText
                            android:id="@+id/et_password_again"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/blue"
                            android:gravity="left|center"
                            android:hint="请再次输入密码"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp" >

                            <Button
                                android:id="@+id/btn_code"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:text="获取验证码"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/medium_text"
                                android:background="@color/blue_dep"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp" />

                            <EditText
                                android:id="@+id/et_code"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_alignParentLeft="true"
                                android:layout_toLeftOf="@+id/btn_code"
                                android:background="@drawable/blue_dep_cricle"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:hint="@string/please_input_verification_code"
                                android:textColor="@color/black"
                                android:textSize="@dimen/medium_text" />

                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_reg"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/blue_dep_bg"
                        android:text="注册"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text" />



                </LinearLayout>

                <ImageView
                    android:id="@+id/cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/close" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>