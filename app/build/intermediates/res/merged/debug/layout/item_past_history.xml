<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_info_height"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/iv_delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:scaleType="centerInside"
        android:src="@drawable/navigation_delete" />

    <EditText
        android:id="@+id/item_name_tv"
        android:layout_width="150dp"
        android:layout_height="@dimen/user_info_height"
        android:layout_toRightOf="@id/iv_delete_item"
        android:layout_marginLeft="15dp"
        android:background="@drawable/gray_circle"
        android:hint="名称"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text" />

    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="150dp"
        android:layout_height="@dimen/user_info_height"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_name_tv"
        android:background="@drawable/gray_circle"
        android:hint="时间"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text" />

    <ImageView
        android:id="@+id/iv_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_time_tv"
        android:src="@drawable/add_blue_icon" />

</RelativeLayout>